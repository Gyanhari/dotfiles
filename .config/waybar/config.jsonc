{
    "layer": "top",
    "position": "top",
    "height": 36,
    "spacing": 6,
    
    // Left: Workspaces, Media Control (Focus/Navigation)
    "modules-left": ["hyprland/workspaces", "mpris"],
    
    // Center: Clock/Date (Primary Information)
    "modules-center": ["clock"],
    
    // Right: System Status & Utility Modules (Maximum Information)
    "modules-right": [
        "cpu", 
        "memory", 
        "temperature", 
        "custom/updates", 
        "pulseaudio", 
        "network", 
        "battery", 
        "tray"
    ],
    
    // --- MODULE CONFIGURATIONS ---
    "hyprland/workspaces": {
        "format": "{icon}",
        "swap-icon-label": false,
        "format-icons": {
            "1": "‰∏Ä",
            "2": "‰∫å",
            "3": "‰∏â",
            "4": "Âõõ",
            "5": "‰∫î",
            "6": "ÂÖ≠",
            "7": "‰∏É",
            "8": "ÂÖ´",
            "9": "‰πù",
            "10": "ÂçÅ",
            "default": "Û∞Æ∫"
        },
 
        "persistent-workspaces": {
            "1": [], "2": [], "3": [], "4":[]
        },
        "on-click": "activate"
    },
    
    // Media Player Control (MPRIS)
    "mpris": {
        "format": "üíø {status_icon} {title}",
        "format-paused": "‚è∏Ô∏è {title}",
        "format-stopped": "OFFLINE",
        "player":"playerctld",
        "format-icons": {
            "Playing": "‚ñ∂",
            "Paused": "‚è∏",
            "Stopped": "‚èπ"
        },
        "tooltip": true,
        "tooltip-format": "{player}: {title} by {artist}",
        "scroll-up": "previous",
        "scroll-down": "next",
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-click-middle": "playerctl previous"
    },


    // Clock
    "clock": {
        "format": "TIME:{:%I:%M %p}",
        "format-alt": "DATE:{:%Y-%m-%d}",
        "tooltip-format": "<big>{:%A, %B %d}</big>\n<tt><small>{calendar}</small></tt>"
    },

    // CPU Usage
    "cpu": {
        "format": "CPU:{usage}%",
        "interval": 2,
        "max-length": 10,
        "tooltip": true
    },

    // Memory Usage
    "memory": {
        "format": "RAM:{percentage}%",
        "interval": 5,
        "tooltip": true
    },

    // Temperature (Using safe default settings)
    "temperature": {
        "thermal-zone": 0, 
        "format": "TEMP:{temperatureC}¬∞C",
        "critical-threshold": 80,
        "format-critical": "üî• TEMP:{temperatureC}¬∞C",
        "tooltip": true
    },
    
    // System Updates (Using robust command)
    "custom/updates": {
        "format": "UPDATES:{updates}",
        "exec": "sh -c 'updates=$(pacman -Qn | wc -l); printf \"%s\" \"$updates\"'",
        "interval": 3600,
        "format-icons": ["Û∞èñ"]
    },

    // Volume Control (Enhanced Toggles and Icons)
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-icons": {
            "headset": "üéß", // Headset connected
            "default": ["üîá", "üîà", "üîâ", "üîä"] // Mute, Low, Medium, High
        },
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle", // Click to MUTE/UNMUTE
        "on-click-right": "pavucontrol", // Right-click to open volume mixer
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%"
    },

    // Network Status (Enhanced Icons)
    "network": {
        "interface": "wlp2s0",
        "format-wifi": "Ôá´ {essid}",
        "format-ethernet": "Û∞àÄ ETH",
        "format-disconnected": "Û∞åô OFFLINE", // New icon for disconnected
        "tooltip-format-wifi": "Tx: {bandwidth:3} | Rx: {bandwidth:3}",
        "on-click": "nm-connection-editor" // Click to open network manager
    },

    // Battery Status (Enhanced Icons)
    "battery": {
        "battery": "BAT1",
        "format": "{icon} {percentage}%",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "format-charging": "‚ö° {percentage}%", // New icon for charging
        "format-full": "üîã FULL", // New icon for full
        "tooltip": true,
        "on-click": "upower -i /org/freedesktop/UPower/devices/battery_BAT0" // Click for detailed info
    },
    
    // Tray (Used for nm-applet, blueman-applet)
    "tray": {
        "icon-size": 18,
        "spacing": 5
    }
}
