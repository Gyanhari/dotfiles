{
    "layer": "top",
    "position": "top",
    "height": 36,
    "spacing": 6,
    
    // Left: Workspaces, Media Control (Focus/Navigation)
    "modules-left": ["hyprland/workspaces", "mpris"],
    
    // Center: Clock/Date (Primary Information)
    "modules-center": ["clock" ],
    
    // Right: System Status & Utility Modules (Maximum Information)
    "modules-right": [
        "custom/notification",
        "cpu", 
        "memory", 
        "temperature", 
        "pulseaudio", 
        "network",  
        "battery",
        "tray"
    ],
    
    // --- MODULE CONFIGURATIONS ---
    "hyprland/workspaces": {
        "format": "{icon}",
        "swap-icon-label": false,
        "format-icons": {
            "1": "‰∏Ä",
            "2": "‰∫å",
            "3": "‰∏â",
            "4": "Âõõ",
            "5": "‰∫î",
            "6": "ÂÖ≠",
            "7": "‰∏É",
            "8": "ÂÖ´",
            "9": "‰πù",
            "10": "ÂçÅ",
            "default": "Û∞Æ∫"
        },

        "persistent-workspaces": {
            "1": [], "2": [], "3": [], "4":[]
        },
        "on-click": "activate"
    },
    
    // Media Player Control (MPRIS)
    "mpris": {
        "format": "üíø {status_icon} {title}",
        "format-paused": "‚è∏Ô∏è {title}",
        "format-stopped": "OFFLINE",
        "player":"playerctld",
        "format-icons": {
            "Playing": "‚ñ∂",
            "Paused": "‚è∏",
            "Stopped": "‚èπ"
        },
        "tooltip": true,
        "tooltip-format": "{player}: {title} by {artist}",
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous",
        "on-click": "playerctl play-pause",
        "on-click-right": "~/.config/waybar/scripts/open-mpris-player",
        "on-click-middle": "playerctl previous"
    },

    "clock": {
        "format": "{:%I:%M %p | %B %d,%A}",
        "format-alt": "{:%A, %B %d, %Y}",
        "tooltip-format": "<big>{:%A, %B %d}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
	    "format-icons": {
		    "notification": "<span foreground='#E5A50A'><sup></sup>ÓÆ¥</span>",
		    "none": "ÓÆ¥",
		    "dnd-notification": "<span foreground='#E01B24'><sup>ÓÆ¥</sup></span>",
		    "dnd-none": "<span foreground='#444'><sup></sup>ÓÆ¥</span>",
		    "inhibited-notification": "<span foreground='#E01B24'><sup>ÓÆ¥</sup></span>",
		    "inhibited-none": "ÓÆ¥",
		    "dnd-inhibited-notification": "<span foreground='red'><sup>ÓÆ¥</sup></span>",
    	    "dnd-inhibited-none": "<span foreground='#444'><sup></sup>ÓÆ¥</span>"
        },
    	    "return-type": "json",
    	    "exec-if": "which swaync-client",
    	    "exec": "swaync-client -swb",
    	    "on-click": "swaync-client -t -sw",
		    "on-click-right": "swaync-client -d -sw",
		    "escape": true
    },
    // CPU Usage
    "cpu": {
        "format": "CPU:{usage}%",
        "interval": 2,
        "max-length": 10,
        "tooltip": true
    },

    // Memory Usage
    "memory": {
        "format": "RAM:{percentage}%",
        "on-click": "kitty btop",
        "interval": 5,
        "tooltip": true
    },

    // Temperature (Using safe default settings)
    "temperature": {
        "thermal-zone": 0, 
        "format": "TEMP:{temperatureC}¬∞C",
        "critical-threshold": 80,
        "format-critical": "üî• TEMP:{temperatureC}¬∞C",
        "tooltip": true
    },
    
    // System Updates (Using robust command)
    "custom/updates": {
        "format": "UPDATES:{updates}",
        "exec": "checkupdates 2>/dev/null| wc -l",
        "interval": 3600,
        "format-icons": ["Û∞èñ"]
    },

    // Volume Control (Updated for explicit mute format and clear icons)
    "pulseaudio": {
        "format": "VOL {icon} {volume}%",
        "format-muted": "VOL ÔÄ¶ MUTED", // Shows specific text and the mute icon (ÔÄ¶) when volume is muted
        "tooltip": false,
        "format-icons": {
            "headset": "üéß", 
            "default": ["ÔÄß", "ÔÄß", "ÔÄ®", "ÔÄ®"] 
        },
        "on-click": "~/.config/hypr/scripts/volume_control.sh mute", 
        "on-click-right": "pavucontrol", // Right-click to open volume mixer
        "on-scroll-up": "~/.config/hypr/scripts/volume_control.sh up",
        "on-scroll-down": "~/.config/hypr/scripts/volume_control.sh down"
    },

    // Network Status (Enhanced Icons)
    "network": {
        "interface": "wlp2s0",
        "format-wifi": "Ôá´ {essid}",
        "format-ethernet": "Û∞àÄ ETH",
        "format-disconnected": "Û∞åô OFFLINE", // New icon for disconnected
        "tooltip-format-wifi": "Tx: {bandwidth:3} | Rx: {bandwidth:3}",
        "on-click": "nm-connection-editor" // Click to open network manager
    },

    "battery": {
	"format": "{capacity}% {icon}",
	"format-charging": "{capacity}% ‚ö°",
	"format-full": "üîã",
	"format-plugged": "Ôá¶",
	"format-icons": ["ÔâÑ","ÔâÉ","ÔâÇ","ÔâÅ","ÔâÄ"],
	"tooltip-format": "{capacity}% - {time}",
    "states": {
        "critical": 15,
        "warning": 25,
        "good": 80
        }

    },
    // Tray (Used for nm-applet, blueman-applet)
    "tray": {
        "icon-size": 18,
        "spacing": 5
    }
}


